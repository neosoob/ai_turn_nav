{
  "manifest_version": 3,
  "name": "AI Turn Navigator",
  "version": "0.1.0",
  "description": "Add a right-side navigator for long AI conversations.",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
